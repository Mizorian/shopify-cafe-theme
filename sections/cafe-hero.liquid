{% comment %} 
  Sección Intro: Storytelling de marca. 
{% endcomment %}

{{ 'cafe-brand.css' | asset_url | stylesheet_tag }}

<section class="cafe-hero-clean">
  <div class="cafe-hero-grid">
    
    <div class="cafe-hero-content">
      <span class="cafe-label">{{ section.settings.label }}</span>
      <h1 class="cafe-main-title">{{ section.settings.title }}</h1>
      <div class="cafe-main-text">{{ section.settings.text }}</div>
      
      <div class="cafe-hero-buttons">
        <a href="/collections/all" class="cafe-btn-fill">Explorar Grano</a>
        <a href="#mas-info" class="cafe-btn-outline">Nuestra Tostaduría</a>
      </div>
    </div>

    <div class="cafe-hero-image">
      {% if section.settings.image != blank %}
        <img src="{{ section.settings.image | img_url: '1200x' }}" alt="Cultura de Café">
      {% else %}
        {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-cafe' }}
      {% endif %}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Café Intro Hero",
  "settings": [
    { "type": "text", "id": "label", "label": "Subtítulo", "default": "Molienda Artesanal" },
    { "type": "text", "id": "title", "label": "Título Principal", "default": "El arte de la paciencia en cada grano" },
    { "type": "richtext", "id": "text", "label": "Descripción", "default": "<p>Seleccionamos historias de origen único para llevar un tributo a la tierra hasta tu taza.</p>" },
    { "type": "image_picker", "id": "image", "label": "Imagen de Ambiente (Lifestyle)" }
  ],
  "presets": [{ "name": "Café Intro Hero" }]
}
{% endschema %}